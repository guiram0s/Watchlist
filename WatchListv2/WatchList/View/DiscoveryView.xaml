<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WatchList.View"
             xmlns:WatchList="clr-namespace:WatchList" x:Class="WatchList.View.DiscoveryView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer Margin="0,50,0,0">
            <WrapPanel Name="joe">
                <WatchList:moviePanel Height="16" Width="9"/>
            </WrapPanel>
        </ScrollViewer>
        <ComboBox Name="searchComboBox" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" Width="120"  IsReadOnly="True">
            <ComboBoxItem Content="Ação"/>
            <ComboBoxItem Content="Aventura"/>
            <ComboBoxItem Content="Terror"/>
            <ComboBoxItem Content="Comédia"/>
            <ComboBoxItem Content="Ficção científica"/>
            <ComboBoxItem Content="Animação"/>
            <ComboBoxItem Content="Fantasia"/>
            <ComboBoxItem Content="Drama"/>
            <ComboBoxItem Content="Documentário"/>
            <ComboBoxItem Content="Mistério"/>
            <ComboBoxItem Content="Musical"/>
            <ComboBoxItem Content="Romance"/>
        </ComboBox>
        <Button Content="Search" HorizontalAlignment="Left" Margin="135,13,0,0" VerticalAlignment="Top" Click="show" Style="{StaticResource normalBtnStyle}" Height="22" Width="44"/>
    </Grid>
</UserControl>
